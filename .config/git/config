# vim: set noexpandtab tabstop=4  :

[user]
	email = mark@aur.ll.to
	name = aki.
[core]
	autocrlf = false
	quotepath = false
	editor = vim
[feature]
	experimental = true
[credential]
	helper = store
[color]
	ui = auto
[pager]
	grep = false
	ls-files = false
[init]
	defaultBranch = master
[status]
	showStash = true
[log]
	date = iso-local
[grep]
	lineNumber = true
	patternType = perl
[diff]
	tool = vimdiff
	noprefix = true
	renames = true
	colorMoved = true
	algorithm = histogram
[difftool]
	prompt = false
[fetch]
	prune = true
	recurseSubmodules = true
	pruneTags = true
	all = true
[push]
	default = simple
	recurseSubmodules = on-demand
	followTags = true
	autoSetupRemote = true
[pull]
	rebase = true
[submodule]
	recurse = true
#[merge]
#	conflictstyle = zdiff3
[rebase]
	autosquash = true
	autostash = true
	updateRefs = true
[commit]
	verbose = true
[branch]
	sort = committerdate
[alias]
	aa = add --all --verbose
	b = branch
	ba = branch --all
	ci = commit
	co = checkout
	cp = cherry-pick
	st = status
	show-st = show --summary --name-status
	ri = rebase -i
	ff = merge --ff-only
	logn = log --name-status
	logp = log --patch
	logf = log --pretty=fuller
	graph = log --oneline --graph --all --decorate=full
	cloner = clone --recursive
	sync = !git pull && git push
	pullm = !git switch master && git pull
	pullmf = !git switch master && git restore . && git pull
	pulla = !git pull --no-recurse-submodules && git submodule foreach git pull && git status
	spull = !git submodule foreach git pull
	spullm = !git submodule foreach git pullm
	spullmf = !git submodule foreach git pullmf
	pushf = push --force-with-lease --force-if-includes
	r = remote
	ra = remote --verbose
	unstage = reset -q HEAD --
	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	amend-date = commit --amend --date=now
	rebase-date = rebase --ignore-date
	ri-date = rebase -i --ignore-date
	precommit = diff --cached --diff-algorithm=minimal --ignore-all-space --ignore-blank-lines
	diffn = diff --ignore-all-space --ignore-blank-lines
	acp = !git status && bash -c \"read -p 'Press [Enter] key to continue.'\" && git add --all --verbose && git commit --message=. && git push

