# vim: set noexpandtab tabstop=4  :

[user]
	email = mark@aur.ll.to
	name = aki.

[core]
	autocrlf = false
	quotepath = false
	editor = vim

[credential]
	helper = store

[color]
	ui = auto

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[fetch]
	prune = true
	recurseSubmodules = true

[push]
	default = simple
	recurseSubmodules = on-demand

[pull]
	rebase = preserve

[alias]
	aa = add -A
	b = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	st = status
	ri = rebase -i origin/master
	ff = pull --ff-only
	am = commit --amend
	sb = submodule foreach git branch
	sci = submodule foreach git commit
	sco = submodule foreach git checkout
	scp = submodule foreach git cherry-pick
	sst = submodule foreach git status
	sri = submodule foreach git rebase -i origin/master
	saa = submodule foreach git add -A
	sff = submodule foreach git pull --ff-only
	sam = submodule foreach git commit --amend
	spush = submodule foreach git push
	spull = submodule foreach git pull
	configv = config --list --show-origin
	cloner = clone --recursive
	pullm = !git checkout master && git pull
	pulls = submodule update --recursive --remote
	pulla = !git pull --no-recurse-submodules && git submodule foreach git pull && git status
	pushf = push --force-with-lease
	logt = log --oneline --graph --all --decorate=full

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
