# vim: set noexpandtab tabstop=4  :

[user]
	email = mark@aur.ll.to
	name = aki.

[core]
	autocrlf = false
	quotepath = false
	editor = vim

[credential]
	helper = store

[color]
	ui = auto

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[fetch]
	prune = true
	recurseSubmodules = true

[push]
	default = simple
	recurseSubmodules = check

[pull]
	rebase = preserve

[submodule]
	recurse = true

[alias]
	aa = add -A
	ci = commit
	cloner = clone --recursive
	co = checkout
	cp = cherry-pick
	st = status
	unadd = reset HEAD
	configv = config --list --show-origin
	pullr = --recurse-submodules
	pullm = !git checkout master && git pull
	pulls = submodule update --recursive --remote

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
