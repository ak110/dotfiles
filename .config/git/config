# vim: set noexpandtab tabstop=4  :

[user]
	email = mark@aur.ll.to
	name = aki.

[core]
	autocrlf = false
	quotepath = false
	editor = vim

[credential]
	helper = store

[color]
	ui = auto

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[fetch]
	prune = true
	recurseSubmodules = true

[push]
	default = simple
	recurseSubmodules = check

[pull]
	rebase = preserve

[submodule]
	recurse = true

[alias]
	aa = add -A
	ci = commit
	co = checkout
	cp = cherry-pick
	st = status
	ri = rebase -i origin/master
	unadd = reset HEAD
	configv = config --list --show-origin
	cloner = clone --recursive
	pullnr = pull --no-recurse-submodules
	pullm = !git checkout master && git pull
	pulls = submodule update --recursive --remote
	pulla = !git pull --no-recurse-submodules && git submodule foreach 'git checkout master && git pull'
	pushf = push --force-with-lease

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
