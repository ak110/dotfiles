[user]
	email = mark@aur.ll.to
	name = aki.

[core]
	autocrlf = false
	quotepath = false
	editor = vim

[credential]
	helper = store

[color]
	ui = auto

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[push]
	default = simple

[pull]
	rebase = preserve

[alias]
	aa = add -A
	ci = commit
	co = checkout
	st = status
	cp = cherry-pick
	unadd = reset HEAD

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
